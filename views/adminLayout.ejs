            <div class="col d-flex justify-content-end align-items-center">
                <a href="/admin/logout" class="btn" style="background-color: white; color: red;">Logout</a>
            </div>
        </div>

        <!-- SIDEBAR -->
         <div class="row">
            <div class="d-none d-lg-block col-lg-2 d-flex flex-column sidebar bg-dark px-3 py-3">
                <a class="text-white sidebar-item" href="/admin"><div class="py-1 border-bottom ">Dashboard</div></a>
                <a href="/admin/sales-report-page"><div class="py-1 border-bottom ">Sales Report</div></a>
                <a href="/admin/users"><div class="py-1 border-bottom ">Customers</div></a>
                <a href="/admin/category"><div class="py-1 border-bottom ">Category</div></a>
                <a href="/admin/brands"><div class="py-1 border-bottom ">Brands</div></a>
