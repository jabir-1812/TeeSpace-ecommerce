    .sidebar {
        height: 100vh;
        position: fixed;
        top: 70px; /* Push below navbar */
        left: 0;
        a{
            color: white;
        }
        div:hover{
            transition: 0.1s ease;
            background-color: rgb(110, 110, 110);
        }
    }
    .sidebar-small{
        a{
            color: white;
        }
        div:hover{
            transition: 0.1s ease;
            background-color: rgb(110, 110, 110);
        }
    }
    a{
        text-decoration: none;
    }
</style>

</head>
