                <a href="/admin/coupons"><div class="py-1 border-bottom ">Coupon</div></a>
                <a href="/admin/banners"><div class="py-1 border-bottom ">Banner</div></a>
                <a href="/admin/orders"><div class="py-1 border-bottom ">Orders</div></a>
            </div>

            <!-- for small screens this will be shown -->
            <div class="sidebar-small d-block d-lg-none d-flex flex-column bg-dark p-3" style="margin-top:10%">
                <a class="text-center" href="/admin"><div class="py-1">Dashboard</div></a>
                <a href="/admin/sales-report-page" class="text-center"><div class="py-1">Sales Report</div></a>
                <a href="/admin/users" class="text-center"><div class="py-1">Customers</div></a>
                <a href="/admin/category" class="text-center"><div class="py-1">Category</div></a>
                <a href="/admin/brands" class="text-center"><div class="py-1">Brands</div></a>
                <a href="/admin/add-products" class="text-center"><div class="py-1">Add product</div></a>
                <a href="/admin/products" class="text-center"><div class="py-1">Products</div></a>
                <a href="/admin/coupons" class="text-center"><div class="py-1">Coupon</div></a>
                <a href="/admin/banners" class="text-center"><div class="py-1">Banner</div></a>
                <a href="/admin/orders" class="text-center"><div class="py-1">Orders</div></a>
            </div>

            <!-- MAIN CONTENT -->
             <div class="col-2 d-none d-lg-block"></div>
            <div class="col main-content content-wrapper">
