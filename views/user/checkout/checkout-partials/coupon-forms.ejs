<form id="couponForm">
    <div class="row border-bottom">
        <span class="h4">Coupon</span>
    </div>
    <% if(applicableCouponsCodes && applicableCouponsCodes.length>0){ %>
    <div class="row mt-3">
        <span class="h6">Applicable Coupon Codes</span>
        <div class="container">
            <div class="row">
                <div class="d-flex flex-column justify-content-center gap-3 align-items-center">
                    <% applicableCouponsCodes.forEach((couponCode)=>{ %>
                        <div class="px-2 fw-bold bg-info-subtle border border-info">
                            <%= couponCode %>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
    <% } %>
    <div class="row align-items-center">
        <div class="col-8">
            <input type="text" name="couponCode" id="couponCode" placeholder="Enter Coupon Code" class="form-control">
            <small id="coupon-error-message" class="text-danger"></small>
            <small id="coupon-success-message" class="text-success"></small>
        </div>
        <div class="col-4">
            <button type="submit">Apply</button>
        </div>
    </div>
    <% if(appliedCoupons.length>0){ %>
        <% appliedCoupons.forEach((coupon)=>{ %>
        <div class="row border-dark-subtle m-1">
            <div class="col-6 d-flex justify-content-center align-items-center applied-coupon" data-coupon-code="<%= coupon.code %>" data-coupon-id="<%= coupon.couponId %>"><%= coupon.code %></div>
            <div class="col"><button type="button" onclick="removeCoupon('<%= coupon.code %>','<%= coupon.couponId %>')">Remove</button></div>
        </div>
        <% }) %>
    <% }else{ %>
    <% } %>
</form>



