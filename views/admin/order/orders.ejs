

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h3 class="text-center fw-bold">All Orders</h3>
        </div>
    </div>

    <form action="">
        <div class="row mb-3 d-flex justify-content-center">
            <div class="col-sm-3">
                <input type="search" name="search" class="form-control" placeholder="Search Order/User" value="<%= search %>">
            </div>
            <div class="col-sm-2">
                <select name="status" class="form-select">
                <option value="">All Status</option>
                <option value="Pending" <%= status==="Pending"?"selected":"" %>>Pending</option>
                <option value="Shipped" <%= status==="Shipped"?"selected":"" %>>Shipped</option>
                <option value="Out for Delivery" <%= status==="Out for Delivery"?"selected":"" %>>Out for Delivery</option>
                <option value="Delivered" <%= status==="Delivered"?"selected":"" %>>Delivered</option>
                <option value="Cancelled" <%= status==="Cancelled"?"selected":"" %>>Cancelled</option>
                <option value="Return Requested" <%= status==="Return Requested"?"selected":"" %>>Return Requested</option>
                <option value="Returned" <%= status==="Returned"?"selected":"" %>>Returned</option>
            </select>
            </div>
            <div class="col-sm-2">
                <select name="sort" class="form-select">
                    <option value="newest" <%= sort==="newest"?"selected":"" %>>Newest First</option>
                    <option value="oldest" <%= sort==="oldest"?"selected":"" %>>Oldest First</option>
                    <option value="amountAsc" <%= sort==="amountAsc"?"selected":"" %>>Amount Low â†’ High</option>
                    <option value="amountDesc" <%= sort==="amountDesc"?"selected":"" %>>Amount High â†’ Low</option>
                </select>
            </div>
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary">Apply</button>
                <a href="/admin/orders" class="btn btn-secondary">Clear</a>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>User</th>
                        <th>Email</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Return</th>   <!-- ðŸ†• New column -->
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(orders.length === 0) { %>
                    <tr>
                        <td colspan="8" class="text-center text-muted">No orders found</td>
                    </tr>
                    <% } else { %>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td><%= order.orderId %></td>
                                <td><%= new Date(order.createdAt).toLocaleString() %></td>
                                <td><%= order.userId?.name || "Unknown" %></td>
                                <td><%= order.userId?.email || "-" %></td>
                                <td>â‚¹<%= order.totalAmount %></td>

                                <!-- Order Status -->
                                <td>
                                    <% if(order.orderStatus === "Pending") { %>
                                    <span class="badge bg-primary"><%= order.orderStatus %></span>
                                    <% } else if(order.orderStatus === "Shipped") { %>
                                    <span class="badge bg-info"><%= order.orderStatus %></span>
                                    <% } else if(order.orderStatus === "Out for Delivery") { %>
                                    <span class="badge bg-warning text-dark"><%= order.orderStatus %></span>
                                    <% } else if(order.orderStatus === "Delivered") { %>
                                    <span class="badge bg-success"><%= order.orderStatus %></span>
                                        <small>On <%= new Date(order.deliveredOn).toDateString().slice(4) %></small>
                                    <% } else if(order.orderStatus === "Cancelled") { %>
                                    <span class="badge bg-danger"><%= order.orderStatus %></span>
                                    <% } else { %>
                                    <span class="badge bg-secondary"><%= order.orderStatus %></span>
                                    <% } %>
                                </td>

                                <!-- âœ… Return Column -->
                                <td>
                                <% 
                                    const hasRequested = order.orderItems.some(item => item.returnStatus === "Requested");
                                    const hasApproved = order.orderItems.some(item => item.returnStatus === "Approved");
                                    const hasRejected = order.orderItems.some(item => item.returnStatus === "Rejected");
                                %>

                                <% if (hasRequested) { %>
                                    <span class="badge bg-warning">Return Requested</span>
                                <% } else if (hasApproved && hasRejected) { %>
                                    <span class="badge bg-info">Return Processed</span>
                                <% } else if (hasApproved) { %>
                                    <span class="badge bg-success">Return Approved</span>
                                <% } else if (hasRejected) { %>
                                    <span class="badge bg-danger">Return Rejected</span>
                                <% } else { %>
                                    <span>-</span>
                                <% } %>
                                </td>
                                <td>
                                    <a href="/admin/orders/order-details/<%= order._id %>" class="btn btn-sm btn-outline-dark">View</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col d-flex justify-content-center">
            <% if(currentPage > 1) { %>
                <a class="btn btn-outline-dark" href="?page=<%= currentPage - 1 %>&search=<%= search %>&status=<%= status %>&sort=<%= sort %>">Prev</a>
            <% } %>

            <% for(let i=1; i<= totalPages; i++) { %>
                <a class="<%= currentPage === i ? 'btn btn-dark text-white' : 'btn btn-outline-dark' %>" href="?page=<%= i %>&search=<%= search %>&status=<%= status %>&sort=<%= sort %>"><%= i %></a>
            <% } %>

            <% if(currentPage < totalPages) { %>
                <a class="btn btn-outline-dark" href="?page=<%= currentPage + 1 %>&search=<%= search %>&status=<%= status %>&sort=<%= sort %>">Next</a>
            <% } %>
        </div>
    </div>
</div>