<div class="container">
    <div class="row my-3">
        <div class="col">
            <h3>Add New Category</h3>
        </div>
    </div>
    
    <% if(errors){ %>
        <div class="row mb-3">
            <% errors.forEach((error)=>{ %>
                <div class="col text-danger"><%= error.msg %></div>
            <% }) %>
        </div>
    <% } %>

    <div class="row">
        <form action="/admin/add-category" method="post">
            <div class="col-md-6">
                <div class="row mb-3">
                    <div class="col">
                        <label for="categoryName" class="fw-bold">Category Name:</label>
                        <input type="text" class="form-control" name="categoryName" required placeholder="Enter category name">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="description" class="fw-bold">Description(optional)</label>
                        <textarea id="description" name="description" class="form-control" placeholder="Enter a brief description about this category"></textarea>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <button type="submit" class="btn btn-dark">Add Category</button>
                        <a href="/admin/category"><button class="btn btn-outline-dark">Cancel</button></a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>